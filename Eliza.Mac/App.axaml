<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Eliza.Mac"
             x:Class="Eliza.Mac.App"
			 xmlns:Eliza.Avalonia="using:Eliza.Avalonia"
			 >

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="avares://Eliza.Avalonia/Resources/ResourceDictionary.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
	
	<Application.DataTemplates>
		<Eliza.Avalonia:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme Mode="Light"/>
	</Application.Styles>
</Application>
